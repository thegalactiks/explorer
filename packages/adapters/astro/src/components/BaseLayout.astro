---
import Head from './Head.astro';
import { getDefaultLanguage } from '@galactiks/config';
import type { Content } from '@galactiks/explorer';

type Props = {
  content: Content;
  class?: string;
};

const { content, class: className } = Astro.props;

let prefix;
if (Array.isArray(content.headers?.openGraph)) {
  prefix = 'og: https://ogp.me/ns#';
}
---

<!doctype html>
<html lang={content?.inLanguage || getDefaultLanguage()} prefix={prefix}>
  <Head content={content}>
    <slot name="head" />
  </Head>
  <body class={className}>
    <slot />
  </body>
</html>
